{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "@mohak34/opencode-notifier@latest"
  ],
  "autoupdate": true,
  "keybinds": {
    "app_exit": "<leader>q",
    "input_clear": "<leader>backspace"
  },
  "default_agent": "plan",
  "agent": {
    "build": {
      "color": "#c099ff",
      "permission": {
        "bash": {
          "git *": "ask",
          "git diff*": "allow",
          "git log*": "allow",
          "git show*": "allow",
          "git status*": "allow",
          "gh *": "ask",
          "rm *": "ask"
        },
        "task": {
          "code-checker": "allow",
        }
      }
    },
    "plan": {
      "color": "#ff966c",
      "permission": {
        "bash": {
          "*": "ask",
          "cat *": "allow",
          "echo *": "allow",
          "grep *": "allow",
          "head *": "allow",
          "ls *": "allow",
          "* tsc *": "allow"
        }
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ]
    },
    "google-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "g-search-mcp"
      ],
      "enabled": false,
    },
    "duckduckgo-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@oevortex/ddg_search@latest"
      ],
      "enabled": false,
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "next-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest"
      ]
    }
  }
}
